#: import HourCellLabel minor_widgets.HourCellLabel



<HourCellLabel>:
    height: dp(20)
    size_hint_x: 2


<GeneralShiftHolder>:
    general_shift_grid: general_shift_grid
    orientation: "vertical"
    ScrollView:
        size: self.size
        do_scroll_x: True
        do_scroll_y: False
        GridLayout:
            id: general_shift_grid
            col_default_width: dp(40)
            row_default_height: dp(30)
            cols: len(root.month_days) + 1
            size_hint_x: None
            width: self.minimum_width


<MainLayout>:
    orientation: "vertical"
    Label:
        text: "Detailed shift"
        size_hint_y: .1




        